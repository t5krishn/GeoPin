<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Register</title>

    <!-- External Style and Scripts -->
    <%include ./partials/_external_tags.ejs%>

    <link rel="stylesheet" href="/styles/register.css" type="text/css" />

  </head>

  <body>

    <%- include ./partials/_nav.ejs%>

    <main id="main-content">
      <section id="main-login">
        <div class="wrapper">
          <!-- We need user information about the map -->
          <form method ="POST" action ="/login" id="login-form">
            <h2>Register</h2>
            <div class="form-group" >
              <!-- username-->
              <label for="username">Username:</label>
              <input type="text" name="username">
            </div> <!-- username -->

            <!-- password -->
            <div class="form-group" >
              <label for="subject">Password:</label>
              <input type="text" name="password">
            </div> <!-- password -->

            <input type="submit" value="Submit">
          </form>
        </div> <!-- wrapper -->
      </section>
    </main>

    <!-- Helpers -->
    <script type="text/javascript" src="/scripts/helpers.js"></script>

    <!-- Components -->
    <script type="text/javascript" src="/scripts/components/all_maps.js"></script>

    <!-- Ajax -->
    <script type="text/javascript" src="/scripts/ajax/ajax_map.js"></script>

    <!-- Driver -->
    <script type="text/javascript" src="/scripts/index.js"></script>
  </body>
</html>
